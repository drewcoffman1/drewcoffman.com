<style>
  header {
    margin: 0;
    width: 100%;
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  h2 {
    margin: 0;
    font-size: 2rem;
    text-transform: uppercase;
  }

  h2 a,
  h2 a.active {
    color: var(--theme-text);
    text-decoration: none;
  }

  nav {
    display: flex;
    align-items: center;
    column-gap: 2.5rem;
  }
  nav a {
    padding: 0.5em 0;
    color: var(--red-black);
    border-bottom: 4px solid transparent;
    text-decoration: none;

    &:hover {
      color: var(--deep-red);
    }
  }
  nav a.active {
    border-bottom-color: var(--red-black);
  }

  svg path {
    fill: var(--theme-text);
  }

  @media (max-width: 760px) {
    header {
      padding: 0 0 2rem;
    }
    .hamburger {
      display: flex;
      align-items: center;
    }
    img {
      width: 2rem;
    }
    #close-icon {
      display: none;
    }
  }
</style>
