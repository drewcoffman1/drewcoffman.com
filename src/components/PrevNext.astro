---
const { previous, next } = Astro.props;
---

<div class="prev-next">
  {
    next ? (
      <div class="next">
        <div class="arrow-and-label">
          <svg
            width="22"
            height="8"
            viewBox="0 0 22 8"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path d="M0.646446 3.64645C0.451184 3.84171 0.451184 4.15829 0.646446 4.35355L3.82843 7.53553C4.02369 7.7308 4.34027 7.7308 4.53553 7.53553C4.7308 7.34027 4.7308 7.02369 4.53553 6.82843L1.70711 4L4.53553 1.17157C4.7308 0.976311 4.7308 0.659728 4.53553 0.464466C4.34027 0.269204 4.02369 0.269204 3.82843 0.464466L0.646446 3.64645ZM22 3.5L0.999999 3.5V4.5L22 4.5V3.5Z" />
          </svg>
          <p>NEXT</p>
        </div>
        <a href={next.slug}>{next.title}</a>
      </div>
    ) : (
      <div />
    )
  }
  {
    previous ? (
      <div class="previous">
        <div class="arrow-and-label">
          <p>PREVIOUS</p>
          <svg
            width="22"
            height="8"
            viewBox="0 0 22 8"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path d="M21.3536 4.35355C21.5488 4.15829 21.5488 3.84171 21.3536 3.64645L18.1716 0.464466C17.9763 0.269204 17.6597 0.269204 17.4645 0.464466C17.2692 0.659728 17.2692 0.976311 17.4645 1.17157L20.2929 4L17.4645 6.82843C17.2692 7.02369 17.2692 7.34027 17.4645 7.53553C17.6597 7.7308 17.9763 7.7308 18.1716 7.53553L21.3536 4.35355ZM21 3.5L-7.15256e-07 3.5V4.5L21 4.5V3.5Z" />
          </svg>
        </div>
        <a href={previous.slug}>{previous.title}</a>
      </div>
    ) : (
      <div />
    )
  }
</div>
<style>
  .prev-next {
    display: flex;
    justify-content: space-between;
    column-gap: 2.5rem;
    margin-bottom: 4.5rem;

    path {
      fill: var(--theme-text);
    }

    p {
        color: 
      font-weight: 700;
    }
    a {
      font-size: 1rem;
      text-decoration: none;
      color: var(--theme-lilac);
    }
  }
  .previous {
    display: flex;
    flex-direction: column;
    align-items: flex-end;

    a {
      text-align: right;
    }
  }
  .next {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }
  .arrow-and-label {
    display: flex;
    align-items: center;
    column-gap: 0.75rem;
    max-width: 17rem;
    p {
      font-size: 0.75rem;
    }

    img {
      height: 0.75rem;
    }
  }
  @media (max-width: 680px) {
    .prev-next {
      img {
        height: 0.5rem;
      }
      p {
        font-size: 0.625rem;
      }

      a {
        line-height: 1.2rem;
      }
    }
  }
</style>
